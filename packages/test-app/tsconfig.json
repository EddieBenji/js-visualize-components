{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "esnext"
    },
    "include": ["**/*.ts", "**/*.tsx", "test/visualize/VisualizejsProvider.test.js"],
    "exclude": ["node_modules", "dist"],
}