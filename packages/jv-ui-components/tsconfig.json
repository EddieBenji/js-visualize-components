{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./dist/material-ui",
    "sourceMap": true,
    "outDir": "./dist/material-ui",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "module": "esnext",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "rootDir": "material-ui",
    "isolatedModules": true,
    "resolvePackageJsonImports": true,
    "resolveJsonModule": true
  },
  "include": ["./material-ui/**/*"],
  "exclude": ["node_modules", "dist", "jest.config.ts", "babel.config.cjs"]
}
